# Directory-specific environment configuration
# This file is loaded by direnv or can be sourced manually

# Override mdbook command in this directory
mdbook() {
    if [ "$1" = "serve" ]; then
        echo "‚ùå Direct 'mdbook serve' is disabled in this project!"
        echo "‚úÖ Use: ./dev-server.sh"
        echo ""
        echo "Starting dev-server.sh..."
        ./dev-server.sh
    else
        command mdbook "$@"
    fi
}

# Export the function so it's available in subshells
export -f mdbook

echo "üìö City of Rivergrove build environment loaded"
echo "   ‚Ä¢ 'mdbook serve' ‚Üí redirects to ./dev-server.sh"
echo "   ‚Ä¢ 'mdbook build' ‚Üí works normally"